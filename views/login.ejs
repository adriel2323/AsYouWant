<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>
<body>
    <main class="main-login">
        <div class="loginLeft">
            <picture class="loginLogo">
                <img src="/Images/Logo1.svg" class="loginLogo">
            </picture>
            <a href="/">
                <div class="login_iconContein">
                    <i class="login_icon fa-solid fa-circle-arrow-left"></i>
                </div>
            </a>
        </div>
        <div class="loginRight">
            <h1 class="loginTitle">
                Ingresa para seguir aprendiendo
            </h1>
            <% if (locals.errors) { 
                errors.forEach(error => { %>
                <p class="register_errores"><%= error.msg %></p>
            <% });
            } %>
            <% if (locals.errors) { 
                errors.forEach(error => { %>
                <div class="login_errores">
                    <ul>
                        
                    </ul>
                </div>
            <% });
            } %>
            <form method="POST" action="/usuario/login" class="login_form">
                <div class="campoLogin">
                    <label for="nombre" class="loginLabel">Nombre</label>
                    <input type="nombre" class="imputLogin nombre" name="nombre" value="<%= locals.old && old.nombre ? old.nombre :'' %>" placeholder="nombre de usuario" >
                </div>
                <div class="campoLogin">
                    <label for="nombre" class="loginLabel">Email</label>
                    <input type="email" class="imputLogin email" name="email" value="<%= locals.old && old.email ? old.email :'' %>" placeholder="nombre@ejemplo.com" >
                </div>
                <div class="campoLogin">
                    <label for="nombre" class="loginLabel">Contraseña</label>
                    <input type="password" class="imputLogin password" name="contraseña" placeholder="contraseña" >
                </div>
                
                <!-- <div class="campoLogin">
                    <label for="nombre" class="loginLabel">Contraseña</label>
                    <input type="password" class="imputLogin" name="contraseña" placeholder="contraseña" >
                </div> -->
                <div class="loginButton">
                    <input type="submit" value="Ingresar" class="loginBTN">
                    <a href="/usuario/register">
                        <label for="boton" class="loginBTN">No tengo cuenta</label>
                    </a>
                </div>
            </form>
        </div>
    </main>
    <script src="/Js/validacionFormLogin.js"></script>
</body>