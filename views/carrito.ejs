<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/header.ejs') %>
    <main class="carrito">
        <div class="top-carrito">
        <h1 class="carrito-titulo">Tu carrito</h1>
        <section class="carrito-general">
            <div class="contenido-carrito">
                <% for(i=0;i < 3; i++) { %>
                    <a href="/productos/info/<%=compras[i].id%>" class="carrito-contenedor">
                        <div class="carrito-foto-info">
                            <picture class="carrito-miniatura-curso">
                                <img src="<%=compras[i].imagen %>" class="carrito-imagen-miniatura" height="100px" alt="Fotografía">
                            </picture>
                            <div class="carrito-info">
                                <div class="info">
                                    <h3><%=compras[i].titulo %></h3>
                                    <p><%=compras[i].precio %></p>
                                </div>
                            </div>
                        </div>
                        <button type="reset"><i class="fas fa-trash-alt"></i></button>
                    </a> 
                <% } %>
            </div>
            <div class="resumen">
                <h2>Resumen</h2>
                <div>
                    <p>Subtotal</p>
                    <p>Descuentos aplicados</p>
                    <p>Total a pagar</p>
                </div>
                <button type="submit">Comprar ahora</button>
            </div>
        </section>
        <section class="carrito-recom">
            <h2>Podría interesarte</h2>
            <div class="cursos2">
                <article>
                    <img src="/Images/bordado.jpg" width="100%" alt="Bordado">
                    <div class="course-card">
                        <h3>Bordado a mano nivel 1</h3>
                        <div>
                            <p>Profesor/es</p>
                            <div class="media">
                                <i class="fas fa-file-alt"></i>
                                <i class="fas fa-headphones"></i>
                                <i class="fas fa-video"></i>
                            </div>
                        </div>
                        <p>Precio</p>
                    </div>
                    <div class="buttons">
                        <button class="add"><i class="fas fa-cart-plus"></i></button>
                        <button class="buy">Comprar</button>
                    </div>
                </article>
                <article>
                    <img src="/Images/selfie.jpg" width="100%" alt="Autorretrato">
                    <div class="course-card">
                        <h3>Autorretratos fotográficos</h3>
                        <div>
                            <p>Profesor/es</p>
                            <div class="media">
                                <i class="fas fa-file-alt"></i>
                                <i class="fas fa-headphones"></i>
                                <i class="fas fa-video"></i>
                            </div>
                        </div>
                        <p>Precio</p>
                    </div>
                    <div class="buttons">
                        <button class="add"><i class="fas fa-cart-plus"></i></button>
                        <button class="buy">Comprar</button>
                    </div>
                </article>
                <article>
                    <img src="/Images/scrum.jpg" width="100%" alt="Metodología">
                    <div class="course-card">
                        <h3>Metodología scrum</h3>
                        <div>
                            <p>Profesor/es</p>
                            <div class="media">
                                <i class="fas fa-file-alt"></i>
                                <i class="fas fa-headphones"></i>
                                <i class="fas fa-video"></i>
                            </div>
                        </div>
                        <p>Precio</p>
                    </div>
                    <div class="buttons">
                        <button class="add"><i class="fas fa-cart-plus"></i></button>
                        <button class="buy">Comprar</button>
                    </div>
                </article>
            </div>
        </section>
            
        </div>
    </main>
    <%- include('./partials/footer') %>
</body>
</html>