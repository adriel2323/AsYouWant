<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/header.ejs') %>
    <main class="main_crear">
        <a href="/usuario/perfil/<%=findUser.id%>">
            <div class="crear_iconContein">
                <i class="crear_icon fa-solid fa-circle-arrow-left"></i>
            </div>
        </a>
        <div class="top-crear">
            <h1>Creación de cursos</h1>
            <% if(locals.errors) {
                errors.forEach(error => { %>
                    <p class="erroresCreate"><%= error.msg %></p>
            <% });
            } %>

            <form name="crearForm" action="/productos/crear-producto" method="POST" class="crear_form" enctype="multipart/form-data">
                <div class="crear_errores" id="crear-errorList">
                    <ul id="crear-errorList">
                    </ul>
                </div>
                <div>
                    <h3 class="editar_tituloInfo">Información básica</h3>
                <div class="description-edit">
                    <input type="text" class="titulo" name="titulo" value="<%= locals.old && old.titulo ? old.titulo :'' %>" placeholder="Nombre de curso"><br>
                    <input type="textarea" name="description_corta"  class="curso_descripcionCorta" value="<%= locals.old && old.descripcion_corta ? old.descripcion_corta :'' %>" placeholder="Descripcion del curso"><br>
                    <textarea type="text" name="descripcion_larga" value="<%= locals.old && old.descripcion_larga ? old.descripcion_larga:'' %>" placeholder="Descripcion mas detallada del curso"  rows="5" cols="60" class="editar_textArea"></textarea>
                </div>
                <h3 class="editar_tituloInfo">Categoría</h3>
                <div class="category-edit">
                    <% for(i = 0; i < categorias.length; i++) { %>
                        <label for="category-edit"><input type="radio" name="categorias" value="<%= categorias[i].nombre %>" id="<%= categorias[i].nombre %>" ><%=categorias[i].nombre%></label><br>
                    <% } %> 
                </div>
                <h3 class="editar_tituloInfo">Cover del curso</h3>
                <div class="foto">
                    <input type="file" class="curso_imagen" name="imagen" id="imagen">
                </div>
                <h3 class="editar_tituloInfo">Opciones de material</h3>
                <div class="multimedia-edit">
                    <label for="multimedia-edit"><input type="checkbox" name="visual" value="visual" id="visual">Visual</label><br>
                    <label for="multimedia-edit"><input type="checkbox" name="audio" value="audio" id="audio">Audio</label><br>
                    <label for="multimedia-edit"><input type="checkbox" name="audiovisual" value="audiovisual" id="audiovisual">Audiovisual</label><br>
                </div>
                <h3 class="editar_tituloInfo">Carga de multimedia</h3>
                <div class="multimedia-edit">
                    <label>Material en pdf<input type="file" name="pdf" id="pdf" accept="file_extension"></label><br>
                    <label>Material auditivo<input type="file" name="audio" id="audio" accept="audio/*"></label><br>
                    <label>Material audiovisual<input type="file" name="video" id="video" accept="video/*"></label><br>
                </div>
                <h3 class="editar_tituloInfo">Precio</h3>
                <div class="price-edit">
                    <input type="number" class="curso_precio" name="precio" value="<%= locals.old && old.precio ? old.precio :'' %>" placeholder="Precio"><br>
                </div>
                <!-- <div>
                    <h3 class="editar_tituloInfo">Imagen de Portada</h3>
                    <input type="image"  placeholder="Imagen" name="imagen">
                </div> -->
                <div class="editBtn">
                    <input type="submit" value="Crear" class="button">
                    <input type="reset" value="Borrar cambios" class="button">
                </div>
                </div>
            </form>
        </div>
    </main>
    <%- include('./partials/footer') %>
    <script src="/Js/validacionFormCreacionProduct.js"></script>
</html>